{
  "name": "fava",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "watch-js": "rollup -c -w",
    "watch-css": "postcss -lw -u 'postcss-import' -u 'postcss-cssnext' -o 'gen/style.css' css/style.css",
    "lint": "eslint javascript --ext .js && stylelint 'css/*.css'"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "number-leading-zero": "never",
      "custom-property-empty-line-before": null,
      "order/declaration-block-properties-alphabetical-order": true
    }
  },
  "devDependencies": {
    "eslint": "^3.5.0",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-plugin-import": "^2.0.1",
    "postcss": "^5.2.5",
    "postcss-cli": "^3.1.1",
    "postcss-copy": "^6.2.1",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.1.0",
    "rollup": "^0.41.4",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-json": "^2.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-postcss": "^0.4.1",
    "rollup-watch": "^3.2.2",
    "stylelint": "^7.8.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-order": "^0.4.3"
  },
  "dependencies": {
    "@typopro/web-fira-mono": "^3.4.4",
    "@typopro/web-fira-sans": "^3.4.4",
    "@typopro/web-source-code-pro": "^3.4.4",
    "@typopro/web-source-serif-pro": "^3.4.4",
    "awesomplete": "git+https://github.com/LeaVerou/awesomplete.git#gh-pages",
    "classlist.js": "^1.1.20150312",
    "clipboard": "^1.5.8",
    "codemirror": "^5.15.2",
    "d3-array": "^1.0.1",
    "d3-axis": "^1.0.3",
    "d3-format": "^1.0.2",
    "d3-hierarchy": "^1.0.2",
    "d3-scale": "^1.0.3",
    "d3-scale-chromatic": "^1.0.2",
    "d3-selection": "^1.0.2",
    "d3-shape": "^1.0.3",
    "d3-time-format": "^2.0.2",
    "d3-transition": "^1.0.3",
    "d3-voronoi": "^1.0.2",
    "element-closest": "^2.0.1",
    "es6-promise": "^4.0.5",
    "fuzzyjs": "^2.1.2",
    "mousetrap": "^1.5.3",
    "urijs": "^1.18.0",
    "whatwg-fetch": "^2.0.1"
  }
}
